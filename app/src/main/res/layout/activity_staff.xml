<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".staff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/take_attendance"
                android:layout_marginLeft="26dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/take_attendence"/>

            <ImageButton
                android:id="@+id/send_message"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/write_message2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Manual Attendance"
                android:layout_marginLeft="55dp"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Send Message"
                android:layout_marginLeft="85dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/qr_attendance"
                android:layout_marginLeft="26dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/qr_attendance"/>

            <ImageButton
                android:id="@+id/teaching_schedule"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/schedule"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="QR Attendance"
                android:layout_marginLeft="55dp"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Your Schedule"
                android:layout_marginLeft="85dp"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>